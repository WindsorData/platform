<%= form_for(@user, html: {class: "custom"}) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation" class="form-error cf">
      <h2 class="left"><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul class="left">
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    <div class="large-5 columns">
      <%= f.select(:role, options_for_select(User::ROLES, @user.role)) %>
    </div>
    <div id="company_fields">
       <%= f.select(:company, options_from_collection_for_select(Company.all, :id, :name, @user.company.try(:id))) %> <%= link_to 'new company', new_company_path %>
    </div>
    
    <div class="large-5 columns">
      <%= f.email_field :email, placeholder: "email" %>
    </div>

    <div class="actions large-2 columns">
      <%= f.submit class: "button postfix" %>
    </div>
  </div>
<% end %>
