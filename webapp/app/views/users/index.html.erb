<h1>Users</h1>

<table class="table">
  <thead>
    <tr>
      <th>Email</th>
      <th>Company</th>
      <th>Role</th>
      <th>Edit</th>
      <th>Remove</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.company.try(:name) %></td>
        <td><%= user.role %></td>
        <td><%= link_to "<span data-icon='&#xe001;'></span>".html_safe, edit_user_path(user) %></td>
        <td><%= link_to "<span data-icon='&#xe000;'></span>".html_safe, user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br />

<%= link_to 'New User', new_user_path %>
