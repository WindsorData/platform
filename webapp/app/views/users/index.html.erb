<h1>Users</h1>

<table>
<% @users.each do |user| %>
  <tr>
    <td><%= user.email %></td>
    <td><%= user.company.try(:name) %></td>
    <td><%= user.role %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Remove', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

