<div class="row">
  <div class="large-12 columns">
    <h1>Delete Peers database</h1>
    <hr>
  </div>
  <div class="large-4 pull-8 columns">
    <%= form_tag(delete_db_companies_path) do %>
      <%= submit_tag 'Delete Peers database', class: 'button postfix alert', data: { confirm: "Are you sure you want to delete companies database?" } %>
    <% end %>
  </div>
</div>

<h1 class="title">Delete Specific Peers Relationship</h1>
<hr>
  <%= form_tag(delete_peers_companies_path) do %>
    <div class="row">
      <div class="large-4 columns">
        <%= text_field_tag :company_peer_ticker, nil, class: "company-peer-ticker", required: true %>
      </div>
    </div>

    <div class="row">
      <div class="large-4 columns padding-top-10">
        <%= text_field_tag :peer_ticker, nil, placeholder: "Type a peer ticker to remove", required: true %>
      </div>
    </div>

    <div class="row">
      <div class="large-4 columns">
        <%= text_field_tag :fiscal_year, nil, placeholder: "Type a fiscal year", required: true %>
      </div>
    </div>


    <div class="row">
      <div class="large-4 columns">
        <%= text_field_tag :filling_date, nil, placeholder: "Select a filling date", required: true %>
      </div>
    </div>

    <div class="row">
      <div class="large-4 columns">
        <%= submit_tag 'Delete Peers Company', class: 'button postfix alert', data: { confirm: "Are you sure you want to delete this peers Company?" } %>
      </div>
    </div>
  <% end %>