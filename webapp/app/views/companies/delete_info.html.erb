<% content_for :head do %>
  <%= javascript_include_tag "delete_info" %>
<% end %>

<h1 class="title">Delete Ticker Info</h1>
<hr>
<%= form_tag(delete_top5_companies_path) do %>
  <div class="row">
      <div class="large-4 columns">
        <%= text_field_tag :ticker %>
      </div>
  </div>
  <div class="row">
    <div class="large-4 columns padding-top-10">
      <%= text_field_tag :year, nil, placeholder: "Year" %>
    </div>
  </div>
  <div class="row">
      <div class="large-4 columns">
        <%= submit_tag 'Delete', class: 'button postfix alert', data: { confirm: "Are you sure you want to delete Top5 information for this ticker and year?" } %>
      </div>
  </div>
<% end %>

