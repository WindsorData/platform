<% if @company_peer %>
  <%= @company_peer.name %> (<%= @company_peer.ticker %>) "SECONDARY PEER"
<% end %></br></br>
<%= form_tag(export_peers_peers_path(format: "xls")) do %>
  <%= hidden_field_tag 'json_query', @json_query %>
  <%= submit_tag 'Download XLS', class: 'big-button' %>
<% end %>

<div class="row">
  <div class="large-4 columns">
    <input type="radio" name="secondary_type" value="Normalized" checked="checked">Normalized
    <input type="radio" name="secondary_type" value="Unnormalized">Unnormalized
  </div>
  <div class="large-4 columns">
    <%= select_tag :topAmount, options_for_select((5..50).step(5).push("All results"), "All results") %>
  </div>
  <div class="large-4 columns">
    <% if @company_peer %>
      <%= @company_peer.name %> (<%= @company_peer.ticker %>) "PRIMARY PEER"
    <% end %>
  </div>
</div>

<div class="row">
  <div class="large-8 columns">
  
    <div id="normalized">
      <div class="section-container accordion" data-section="accordion">
        <% @companies_peers["normalized"].each{|secondary| %>
          <section>
            <p class="title" data-section-title><%= secondary["secondPeerName"] %>(<%= secondary["secondPeer"] %>)
              <span class="right"><%= secondary["weight"] %></span>
            </p>
            <div class="content" data-section-content>
              <% secondary["primaryPeersWeights"].each{|primary| %>
                <%= primary["primaryPeerName"] %>(<%= primary["primaryPeer"] %>)
                <span class="right"><%= primary["weight"] %></span></br>                     
              <% } %>
            </div>
          </section>
        <% } %>    
      </div>
    </div>

    <div id="unnormalized"  class="hidden">
      <div class="section-container accordion" data-section="accordion">
        <% @companies_peers["unnormalized"].each{|secondary| %>
          <section>
            <p class="title" data-section-title><%= secondary["secondPeerName"] %>(<%= secondary["secondPeer"] %>)
              <span class="right"><%= secondary["weight"].to_i %></span>
            </p>
            <div class="content" data-section-content>
              <% secondary["primaryPeersWeights"].each{|primary| %>
                <%= primary["primaryPeerName"] %>(<%= primary["primaryPeer"] %>)
                <span class="right"><%= primary["weight"].to_i %></span></br>
              <% } %>
            </div>
          </section>      
        <% } %>    
      </div>
    </div>
  </div>

  <div class="large-4 columns">
    <div id="primary-peers" class="panel">
      <% @companies_peers["primaryPeers"].each{|primary| %>
        <%= primary["peerCoName"] %>(<%= primary["peerTicker"] %>)</br>
      <% } %>    
    </div>
  </div>
</div>