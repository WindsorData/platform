<div class="login">

  <%= link_to "WindsorData", root_path %>

  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
    <%= f.email_field :email, :autofocus => true, placeholder: 'email', class: "width-100" %>

    <%= f.password_field :password, placeholder: 'password', class: "width-100" %>

    <div>
      <% if devise_mapping.rememberable? -%>
        <%= f.check_box :remember_me %> <%= f.label :remember_me %>
      <% end -%>
      <%= f.submit "Sign in", class: "right" %>
    </div>

    <%= render "devise/shared/links" %>

  <% end %>
</div>
