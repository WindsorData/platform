<div class="span9">
  <%= form_tag(search_results_path, class: "main-form" ) do %>
  <fieldset>
  <legend class="legend">Executive compensation</legend>
    <div class="form-container" id="forms-container">      
      <div class="basic-group hidden">
        <div class="role-selector">

          <div class="item-form">
            <label class="label">Role</label>
            <%= select_tag '[role_form][role]', options_from_collection_for_select(@roles, "id", "name") %>
          </div>

          <div class="item-form">
            <label class="label">Pay rank</label>
            <%= select_tag '[role_form][pay_rank]', options_for_select((1..5)), {include_blank: true} %>
          </div>

        </div>
        <div class="filters">
          <!-- cash compensation -->
          <div class="item-form">
            <p class="label">cash compensation</p>
            <%= select_tag '[role_form][cash_comp][type]', options_from_collection_for_select(@cash_comp_values, "field", "value"), {include_blank: true} %>
            <input type="text" placeholder="Greater than ($)" name='[role_form][cash_comp][gt]'>
            <input type="text" placeholder="Less than ($)" name='[role_form][cash_comp][lt]'>
          </div>
          <!-- equity compensation -->
          <div class="item-form">      
            <p class="label">equity compensation</p>
            <%= select_tag '[role_form][eq_comp][type]', options_from_collection_for_select(@eq_comp_values, "field", "value"), {include_blank: true} %>
            <input type="text" placeholder="Greater than ($)" name='[role_form][eq_comp][gt]'>
            <input type="text" placeholder="Less than ($)" name='[role_form][eq_comp][gt]'>
          </div>
          
          <!-- compensation arrangements -->
          <div class="item-form">      
            <p class="label">Compensation arrangements</p>
            <%= label_tag 'Yes' %> <%= radio_button_tag 'comp_arrang', 'Yes' %>
            <%= label_tag 'No' %> <%= radio_button_tag 'comp_arrang', 'No' %>
            <%= label_tag 'N/A' %> <%= radio_button_tag 'comp_arrang', 'N/A' %>
          </div>
          <!-- reload options -->
          <div class="item-form">
            <p class="label">Reload options</p>
            <%= label_tag 'Yes' %> <%= radio_button_tag 'reload_opt', 'Yes' %>
            <%= label_tag 'No' %> <%= radio_button_tag 'reload_opt', 'No' %>
            <%= label_tag 'N/A' %> <%= radio_button_tag 'reload_opt', 'N/A' %>
          </div>
          <!-- CEO tenure -->
          <div class="item-form">
            <p class="label">CEO tenure</p>
            <input type="text" name='[role_form][ceo_tenure][gt]' placeholder="Greater than (yrs)">
            <input type="text" name='[role_form][ceo_tenure][lt]' placeholder="Less than (yrs)">
          </div>
          <!-- other criteria -->
          <div class="item-form">
            <p class="label">other criteria</p>
            
            <!-- Founder -->
            <div class="item-form">
              <p class="label">Founder</p>
              <%= label_tag 'Yes' %> <%= radio_button_tag 'founder', 'Yes' %>
              <%= label_tag 'No' %> <%= radio_button_tag 'founder', 'No' %>
              <%= label_tag 'N/A' %> <%= radio_button_tag 'founder', 'N/A' %>
            </div>

            <!-- transition period -->
            <div class="item-form">
              <p class="label">Transition period</p>
              <%= label_tag 'Yes' %> <%= radio_button_tag 'trans_period', 'Yes' %>
              <%= label_tag 'No' %> <%= radio_button_tag 'trans_period', 'No' %>
              <%= label_tag 'N/A' %> <%= radio_button_tag 'trans_period', 'N/A' %>
            </div>
          </div>
        </div>
      </div>

    </div>
    </fieldset>
    <a class="cto" href="#" id="js-new-form">Add another role</a>

