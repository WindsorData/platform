<div class="span9">
  <%= form_tag(search_result_path, class: "main-form custom" ) do %>
  <fieldset>
  <legend class="legend">Executive compensation</legend>
    <div class="form-container" id="forms-container">
      <div class="basic-group hidden">
        <hr>
        <div class="role-selector row">
          <div class="large-6 columns">
            <label>Role</label>
            <%= select_tag '[role_form][role]', options_from_collection_for_select(@primary_roles, "name", "name"), {include_blank: true} %>
          </div>
          <div class="large-6 columns">
            <label>Pay rank</label>
            <%= select_tag '[role_form][pay_rank]', options_for_select((1..5)), {include_blank: true} %>
          </div>
        </div>
        <div class="filters">

          <!-- cash compensation -->
          <div class="row">
            <div class="large-12 columns">
              <label>cash compensation</label>
            </div>
            <div class="large-4 columns">
              <%= select_tag '[role_form][cash_comp][type]', options_from_collection_for_select(@cash_comp_values, "field", "value"), {include_blank: true} %>
            </div>
            <div class="large-4 columns">
              <input type="text" placeholder="Greater than ($)" name='[role_form][cash_comp][gt]'>
            </div>
            <div class="large-4 columns">
              <input type="text" placeholder="Less than ($)" name='[role_form][cash_comp][lt]'>
            </div>
          </div>

          <!-- equity compensation -->
          <div class="row">
            <div class="large-12 columns">
              <label>equity compensation</label>
            </div>
            <div class="large-4 columns">
              <%= select_tag '[role_form][eq_comp][type]', options_from_collection_for_select(@eq_comp_values, "field", "value"), {include_blank: true} %>
            </div>
            <div class="large-4 columns">
              <input type="text" placeholder="Greater than ($)" name='[role_form][eq_comp][gt]'>
            </div>
            <div class="large-4 columns">
              <input type="text" placeholder="Less than ($)" name='[role_form][eq_comp][lt]'>
            </div>
          </div>
          
          <!-- CEO tenure -->
          <div class="row">
            <div class="large-12 columns">
              <label>CEO tenure</label>
            </div>
            <div class="large-6 columns">
              <input type="text" name='[role_form][ceo_tenure][gt]' placeholder="Greater than (yrs)">
            </div>
            <div class="large-6 columns">
              <input type="text" name='[role_form][ceo_tenure][lt]' placeholder="Less than (yrs)">
            </div>
          </div>

          <hr>

          <!-- other criteria -->
          <h3 class="subtitle">other criteria</h3>

          <div class="row">
            <!-- Founder -->
            <div class="large-3 columns">
              <span>Founder</span>
              <label for="radio1">
                <%= radio_button_tag '[role_form][founder]', 'Yes' %>
                <span class="custom radio"></span> YES
              </label>
              <label for="radio1">
                <%= radio_button_tag '[role_form][founder]', 'No' %>
                <span class="custom radio"></span> NO
              </label>
              <label for="radio1">
                <%= radio_button_tag '[role_form][founder]', 'N/A' %>
                <span class="custom radio"></span> N/A
              </label>
            </div>

            <!-- transition period -->
            <div class="large-3 columns">
              <span>Transition period</span>
              <label for="radio1">
                <%= radio_button_tag '[role_form][trans_period]', 'Yes' %>
                <span class="custom radio"></span> YES
              </label>
              <label for="radio1">
                <%= radio_button_tag '[role_form][trans_period]', 'No' %>
                <span class="custom radio"></span> NO
              </label>
              <label for="radio1">
                <%= radio_button_tag '[role_form][trans_period]', 'N/A' %>
                <span class="custom radio"></span> N/A
              </label>
            </div>
          </div>

        </div>

      </div>
    </div>
    </fieldset>

    <!-- advanced search -->
    <!-- <div class="advanced-search hidden"> -->
    <div class="advanced-search hidden">
      <!-- general criteria -->
      <fieldset>
      <!-- financials -->
      <legend class="legend">Advanced Search</legend>
      <div class="general-criteria">
        <p class="subtitle">Income Statement</p>
        <div class="item-form cf">
          <p>Revenue</p>
          <input type="checkbox">
          <input type="text" name='[income_statement][revenue][gt]' placeholder="Greater than" disabled="disabled"> <span>$ MMs</span>
          <input type="text" name='[income_statement][revenue][lt]' placeholder="Lower than" disabled="disabled"> <span>$ MMs</span>
        </div>
        <div class="item-form cf">
          <p>Net Income</p>
          <p class="label">Revenue</p>
          <%= check_box_tag 'revenue_chk' %>
          <input type="text" name='[income_statement][revenue][gt]' placeholder="Greater than" disabled="disabled"> <span>$ MMs</span>
          <input type="text" name='[income_statement][revenue][lt]' placeholder="Lower than" disabled="disabled"> <span>$ MMs</span>
        </div>
      </div>

      <div class="row">
        <div class="large-4 columns">
          <label for="radio1"><input name="radio1" type="radio" id="radio1" style="display:none;" CHECKED><span class="custom radio checked"></span> Radio Button 1</label>
          <label for="radio1"><input name="radio1" type="radio" id="radio1" style="display:none;"><span class="custom radio"></span> Radio Button 2</label>
          <label for="radio1"><input name="radio1" type="radio" id="radio1" disabled style="display:none;"><span class="custom radio"></span> Radio Button 3</label>
        </div>
        <div class="large-4 columns">
          <label for="checkbox1"><input type="checkbox" id="checkbox1" style="display: none;"><span class="custom checkbox"></span> Label for Checkbox</label>
          <label for="checkbox2"><input type="checkbox" id="checkbox2" CHECKED style="display: none;"><span class="custom checkbox checked"></span> Label for Checkbox</label>
          <label for="checkbox3"><input type="checkbox" CHECKED id="checkbox3" style="display: none;"><span class="custom checkbox checked"></span> Label for Checkbox</label>
        </div>
        <div class="large-4 columns">
          <label for="customDropdown1">Medium Example</label>
          <select id="customDropdown1" class="medium">
            <option DISABLED>This is a dropdown</option>
            <option>This is another option</option>
            <option>This is another option too</option>
            <option>Look, a third option</option>
          </select>
        </div>
      </div>





      <div class="general-criteria">
        <p class="subtitle">Valuations</p>
        <div class="item-form cf">
          <p>Market Cap</p>
          <%= check_box_tag 'valuations_market_cap_chk', 'Market Cap' %>
          <input type="text" name='[valuations][market_cap][gt]' placeholder="Greater than" disabled="disabled"> <span>$ MMs</span>
          <input type="text" name='[valuations][market_cap][lt]' placeholder="Lower than" disabled="disabled"> <span>$ MMs</span>
        </div>
        <div class="item-form cf">
          <p>Price to Earning (P/E)</p>
          <input type="checkbox">
          <input type="text" name='[valuations][pe][gt]' placeholder="Greater than" disabled="disabled"> <span>$ MMs</span>
          <input type="text" name='[valuations][pe][lt]' placeholder="Lower than" disabled="disabled"> <span>$ MMs</span>    
        </div>
      </div>

      <div class="general-criteria">
        <p class="subtitle">Stock Price Performance</p>
        <div class="item-form cf">
          <p>Earnings per Share (EPS)</p>
          <input type="checkbox">
          <input type="text" name='[stock_price_performance][eps][gt]' placeholder="Greater than" disabled="disabled"> <span>%</span>
          <input type="text" name='[stock_price_performance][eps][lt]' placeholder="Lower than" disabled="disabled"> <span>%</span>   
        </div>
      </div>

      <div class="general-criteria">
        <p class="subtitle">Profitability</p>
        <div class="item-form cf">
          <p>Return on Equity</p>
          <input type="checkbox">
          <input type="text" name='[profitability][roe][gt]' placeholder="Greater than" disabled="disabled"> <span>%</span>
          <input type="text" name='[profitability][roe][lt]' placeholder="Lower than" disabled="disabled"> <span>%</span>         
        </div>
      </div>
    </fieldset>

    </div>
    <div class="form-actions">
      <button type="submit" class="btn">Search</button>
      <a href="#" id="advanced-search-button">Show Advanced search</a>
      <a class="button cto" href="#" id="js-new-form">Add another role</a>
    </div>
  <% end %>
</div>
